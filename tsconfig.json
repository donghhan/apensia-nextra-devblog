{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/page.mdx",
    "app/frontend/css/page.mdx",
    "app/frontend/css/flex/page.mdx",
    "app/frontend/css/animation/page.mdx",
    "app/frontend/css/grid/page.mdx",
    "app/statistics/multiple-regression/page.mdx"
  ],
  "exclude": ["node_modules"]
}
